{% extends '@AllProgrammicResque/layout.html.twig' %}

{% block link_jobs_attr %} class="active"{% endblock %}

{% block content %}
    <h1>Insert new job</h1>

    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_row(form.class) }}
    {{ form_row(form.queue) }}
    {{ form_row(form.args) }}
    {{ form_widget(form.submit) }}

    <div class="form-group">
        {{ form_end(form) }}
    </div>
{% endblock %}