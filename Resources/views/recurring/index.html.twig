{% extends 'AllProgrammicResqueBundle::layout.html.twig' %}

{% block link_recurring_attr %} class="active"{% endblock %}

{% block content %}
    <h1>All Recurring Jobs</h1>

    <div class="form-group">
        <a class="btn btn-danger" href="{{ path('resque_recurring_insert') }}">
            Add new recurring job
        </a>
    </div>

    <p class="sub">Showing {{ pager.currentFrom }} to {{ pager.currentCount }} of <b>{{ pager.count }}</b> jobs</p>

    <table class="table table-bordered workers">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Class</th>
            <th>Queue</th>
            <th>Expression</th>
            <th>Actions</th>
        </tr>
        {% for id, job in jobs %}
            {{ include('AllProgrammicResqueBundle:recurring:_recurring_job.html.twig', {id: id, job: job}, with_context=false) }}
        {% else %}
            <tr>
                <td colspan="6" class="no-data">There is no recurring job right now...</td>
            </tr>
        {% endfor %}
    </table>

    {{ pagination(pager, 'resque_recurring') }}
{% endblock %}