<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="resque_worker_sleeping">5</parameter>
        <parameter key="resque_redis_dsn">redis://127.0.0.1:6379/0</parameter>
        <parameter key="resque_redis_prefix">resque:</parameter>
        <parameter key="resque_pagination_default_view">AllProgrammicResqueBundle:pagination:default.html.twig</parameter>
    </parameters>

    <services>
        <service id="resque" class="AllProgrammic\Component\Resque\Engine">
            <argument type="service" id="resque.redis.backend" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="service_container" />
            <argument type="service" id="resque.stat" />
            <argument type="service" id="resque.status.manager" />
            <argument type="service" id="resque.heart" />
            <argument type="service" id="resque.failure" />
            <argument type="service" id="resque.delayed" />
            <argument type="service" id="resque.recurring" />
            <argument type="service" id="resque.charts" />
            <argument type="service" id="resque.lock_delayed" />
            <argument type="service" id="logger" on-invalid="null" />
        </service>

        <service id="resque.status.manager" class="AllProgrammic\Component\Resque\Job\Status">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.stat" class="AllProgrammic\Component\Resque\Stat">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.heart" class="AllProgrammic\Component\Resque\Heart">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.failure" class="AllProgrammic\Component\Resque\Failure\Redis">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.delayed" class="AllProgrammic\Component\Resque\Delayed\Redis">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.recurring" class="AllProgrammic\Component\Resque\Recurring\Redis">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.history" class="AllProgrammic\Component\Resque\History\Redis">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.charts" class="AllProgrammic\Component\Resque\Charts\Charts">
            <argument type="service" id="resque.redis.backend" />
        </service>

        <service id="resque.lock_delayed" class="AllProgrammic\Component\Resque\Lock">
            <argument type="service" id="resque.redis.backend" />
            <argument>delayed</argument>
        </service>

        <service id="resque.redis.backend" class="AllProgrammic\Component\Resque\Redis">
            <argument>%resque_redis_dsn%</argument>
            <argument>%resque_redis_prefix%</argument>
        </service>

        <service id="resque.twig_extension" class="AllProgrammic\Bundle\ResqueBundle\Twig\ResqueExtension" public="false">
            <argument>%resque_redis_dsn%</argument>
            <argument>%resque_redis_prefix%</argument>
            <tag name="twig.extension" />
        </service>

        <service id="pagination.twig_extension" class="AllProgrammic\Bundle\ResqueBundle\Twig\PaginationExtension" public="false">
            <argument>%resque_pagination_default_view%</argument>
            <tag name="twig.extension" />
        </service>
    </services>
</container>
